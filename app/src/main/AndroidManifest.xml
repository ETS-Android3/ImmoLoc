            </intent-filter>
        </activity>
        <activity
            android:name=".HomeActivity"
            android:exported="false"
            android:theme="@style/Theme.ImmoLoc.NoActionBar"/>
        <activity
            android:name=".SearchActivity">
        </activity>
        <activity
            android:name=".RegistrationType"
            android:exported="false" />
        <activity
            android:name=".RealEstateListing"
            android:exported="false" />
        <activity
            android:name=".Signup"
            android:exported="false" />
        <activity
            android:name=".Login"
            android:exported="false" />
        <activity
            android:name=".ForgotPassword">
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".AddAd">
